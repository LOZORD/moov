<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date, { ampm: true, order: [ :month, :day, :year ], start_year: Date.today.year } %>
  </div>
  <div class="field">
    <%= f.label :num_volunteers_needed, 'Number of Volunteers Needed' %><br>
    <%= f.number_field :num_volunteers_needed, { min: 0 } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
